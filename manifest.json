{
    "manifest_version": 3,

    "name": "atnonym",
    "description": "Create an alias of an email to be used on website.",
    "version": "1.0",

    "action": {
     "default_icon": "icons/atnonym_icon_96.png",
     "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
    "host_permissions": [
      "https://api.infomaniak.com/*"
    ],
    "optional_host_permissions":[
        "https://*/*",
        "http://*/*"
    ]
  }
